#include <stdio.h>
#include <unistd.h>
#include "system.h"
#include "io.h"

int main (void)
{
	printf("Starting NIOS V ... \r\n");

	while(1)
	{
		if (IORD_32DIRECT(KEY_BASE,0)){
			printf("LED H \r\n");
			IOWR_32DIRECT(LED_BASE, 0, 0);
		} else {
			printf("LED L \r\n");
			IOWR_32DIRECT(LED_BASE, 0, 1);
		}

		usleep(500000);
	}

	return 0;
}
